<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'role' %>

<% form_for([:ubiquo, @role]) do |form| %>
	<%= render :partial => 'form', :locals => {:form => form} %>
	  <div class="form-item-submit">
	    <%= form.submit t('ubiquo.create'), :class => "bt-submit" %>
	    <%= button_to_function t('ubiquo.back_to_list'), "document.location.href='#{ubiquo_roles_path}'", :class => "bt-back" %>
	  </div>
<% end %>

<% content_for :sidebar do %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.authentication.roles.new")) %>
<% end %>
