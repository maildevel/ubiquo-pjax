<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'category' %>

<% show_preview(Category) do |category| %>
  <%= render :partial => 'category', :object => category %>
<% end %>

<% form_for([:ubiquo, @category_set, @category]) do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
    <div class="form-item-submit">
      <%= form.submit t('ubiquo.save'), :class => "bt-update" %>
      <%= button_to_function t('ubiquo.back_to_list'),
      "document.location.href='#{ubiquo_category_set_categories_path}'",
      :class => "bt-back" %>
    </div>
<% end %>

<% content_for :sidebar do %>
  <%= uhook_edit_category_sidebar @category %>
  <%= help_block_sidebar t("ubiquo.category.edit.help_message") %>
<% end %>
