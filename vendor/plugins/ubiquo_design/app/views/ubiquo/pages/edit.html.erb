<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'page' %>

<% form_for([:ubiquo, @page]) do |f| %>
	<%= render :partial => 'form', :locals => {:f => f} %>
	  <div class="form-item-submit">
	    <%= f.submit t('ubiquo.save'), :class => "bt-update" %>
            <%= button_to_function t('ubiquo.back_to_list'),
               "document.location.href='#{ubiquo_pages_path}'",
               :class => "bt-back" %>
	  </div>
<% end %>

<% content_for :sidebar do %>
  <%= uhook_edit_sidebar %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.design.page.edit")) %>
<% end %>
