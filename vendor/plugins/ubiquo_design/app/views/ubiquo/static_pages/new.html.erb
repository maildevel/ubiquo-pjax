<h1><%= render :partial => 'title' %></h1>
<h2><%= render :partial => "submenu" %></h2>
<%= error_messages_for 'static_page' %>

<% form_for @static_page, :url => ubiquo_static_pages_path do |form| %>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <div class="form-item-submit">
    <input type="button" id="save_publish" value="<%= t('ubiquo.design.static_pages.create_and_publish')%>" class="bt-save_and_publish"/>
    <%= form.submit t('ubiquo.create'), :class => "bt-submit" %>
    <%= button_to_function t('ubiquo.back_to_list'),
        "document.location.href='#{ubiquo_static_pages_path}'",
        :class => "bt-back" %>
  </div>
<% end %>

<% content_for :sidebar do %>
  <%= help_block_sidebar(t("ubiquo.helpmsg.design.static_page.new")) %>
<% end %>
