    <%= yield(:metatags) || metatags(@page) %>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <h1>Ubiquo</h1>
        <p class="site-description">
          CMS Framework for pragmatic developers. Have it your way!
        </p>
        <h2>Index</h2>
      </div>
      <%= yield %>
      <div id="footer"></div>
    </div>
  </body>
</html>
