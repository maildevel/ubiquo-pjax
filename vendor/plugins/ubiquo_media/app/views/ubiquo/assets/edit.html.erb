<h1><%= render :partial => 'title' %></h1>
<h2>
  <%= render :partial => "submenu" %>
</h2>
<%= error_messages_for 'asset' %>

<% form_for(:asset, @asset, :url => ubiquo_asset_path(@asset), :html => {:method => "put", :multipart => true}) do |f| %>
	<%= render :partial => 'form', :locals => {:f => f} %>
	  <div class="form-item-submit">
	    <%= f.submit t('ubiquo.save'), :class => "bt-update" %>
	    <%= button_to_function t('ubiquo.back_to_list'), "document.location.href='#{ubiquo_assets_path}'", :class => "bt-back" %>
	  </div>
<% end %>

<% content_for :sidebar do %>
	<%= uhook_edit_asset_sidebar @asset %>
<% end %>
